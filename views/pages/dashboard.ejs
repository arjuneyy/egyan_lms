<!doctype html>
<html lang="en">
    
<%- include('../partials/head.ejs'); %>
<body>
    <%- include('../partials/alert.ejs'); %> 
    <div class="dashboard-wrapper">
        <!-- Sidebar  -->
        <%- include('../partials/sidebar.ejs'); %>

        <!-- Page Content  -->
        <div id="content">
            <h1>My Courses</h1>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Course Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Duration</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach((course, cnt) => {%> 
                        <tr>
                            <th class="align-middle" scope="row"><%=cnt + 1%></th>
                            <td class="align-middle">
                                <img class="thumbnail" src="data:image/<%=course.photo.contentType%>;base64,
                                    <%=course.photo.data.toString('base64')%>">
                            </td>
                            <td class="align-middle"><%= course.name %> </td>
                            <td class="align-middle"><%= course.category %> </td>
                            <td class="align-middle"><%= course.duration %> </td>
                            <td class="align-middle"><button class="btn btn-xs btn-primary">View</button></td>
                        </tr>
                    <% }); %> 
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>